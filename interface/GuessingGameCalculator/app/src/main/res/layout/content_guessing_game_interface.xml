<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GuessingGameInterface"
    tools:showIn="@layout/activity_guessing_game_interface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="512"
        android:id="@+id/guessedNUM"
        android:layout_marginTop="41dp"
        android:textSize="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equal To"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/restartBTN"
        android:layout_alignStart="@+id/restartBTN"
        android:onClick="clickEqual" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greater Than"
        android:id="@+id/greaterBTN"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickGreater" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Less Than"
        android:id="@+id/lessBTN"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:onClick="clickLess" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;ll guess your number within this number of guesses or less:"
        android:id="@+id/textView3"
        android:layout_marginTop="37dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/guessAMT"
        android:textSize="50dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/restartBTN"
        android:onClick="restartGame"
        android:layout_below="@+id/guessAMT"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is your number greater than, less than, equal to this number?"
        android:id="@+id/textView4"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp" />
</RelativeLayout>
